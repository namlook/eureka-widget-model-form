<div class="panel panel-default">

    {{#if header}}
        <div class="panel-heading">{{{header}}}</div>
    {{/if}}


    <div class="panel-body">
        <form class="form-horizontal">
            {{#each field in fields}}
                <div class="form-group">
                    <label {{bind-attr for="field.meta.name"}} class="col-sm-2 control-label">
                        {{field.meta.label}}
                    </label>
                    <div class="col-sm-10">
                        {{dynamic-component
                            type=field.meta.formWidgetComponentName
                            field=field}}
                    </div>
                </div>
            {{/each}}
        </form>

        {{#unless isEmbedded}}
            <button {{action 'cancel'}}>cancel</button>
            <button {{action 'save'}}>save</button>
        {{/unless}}

    </div>
</div>
